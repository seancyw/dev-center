<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="SpriteLightRock.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="SLRock"
	Height="300"
	Width="300">
    <Window.Resources>
        <Image x:Key="IconOpen" Source="Images/add.png" DataContext="{Binding}" />
    </Window.Resources>
    <Grid>
		<Menu
			IsMainMenu="True"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Margin="0,0,0,245"
			Height="23">
			<MenuItem
				Header="_File"
				Icon="{Binding}">
				<MenuItem
					Header="_Open"
					Background="Blue" Icon="{StaticResource IconOpen}"></MenuItem>
				<MenuItem
					Header="_Save"></MenuItem>
			</MenuItem>
			<MenuItem
				Header="_Edit" />
			<MenuItem
				Header="_View" />
			<MenuItem
				Header="_Window" />
			<MenuItem
				Header="_Help" />
		</Menu>
	</Grid>
</Window>